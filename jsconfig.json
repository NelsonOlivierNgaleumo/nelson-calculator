{
  "compilerOptions": {
    "baseUrl": ".", // Base directory
    "paths": {
      "@/*": ["src/*"] // Alias for `src` folder
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ]
}
